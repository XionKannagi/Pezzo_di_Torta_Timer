    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="0dp"
    tools:context="android.lifeistech.com.pezzoditortatimer.MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="#ff004d"
            android:orientation="horizontal">




                <FrameLayout
                    android:id="@+id/tab1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/icon_size_x5"
                        android:layout_height="@dimen/icon_size_x5"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_alarm_add_white_24dp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tab2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/icon_size_x5"
                        android:layout_height="@dimen/icon_size_x5"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_timer_white_24dp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tab3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/icon_size_x5"
                        android:layout_height="@dimen/icon_size_x5"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_insert_chart_white_24dp" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tab4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/icon_size_x5"
                        android:layout_height="@dimen/icon_size_x5"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_settings_white_24dp" />

                </FrameLayout>


        </LinearLayout>


